<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInfoFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 아이디 입력란 -->
        <TextView
            android:id="@+id/text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_id"/>

        <LinearLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text_id"
            app:layout_constraintBottom_toTopOf="@id/rule_enter_id">
            <!-- 아이디 입력 -->
            <EditText
                android:id="@+id/regist_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_textbox"
                android:fontFamily="@font/pretendard_regular"
                android:hint="@string/id"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/elixir_gray"
                android:textSize="16sp"
                android:inputType="text"
                android:importantForAutofill="no"
                tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />
            <!-- 중복 확인 버튼 -->
            <Button
                android:id="@+id/duplicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/bg_btn_filled"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/duplicate"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular" />
        </LinearLayout>

        <!-- 아이디 입력 시 주의 사항 -->
        <TextView
            android:id="@+id/rule_enter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/rule_id"
            android:fontFamily="@font/pretendard_thin"
            android:textColor="@color/elixir_orange"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/layout_id"
            app:layout_constraintBottom_toTopOf="@id/text_pw"/>

        <!-- 비밀번호 입력 -->
        <TextView
            android:id="@+id/text_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/pw"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rule_enter_id"
            app:layout_constraintBottom_toTopOf="@id/regist_pw"/>

        <EditText
            android:id="@+id/regist_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textbox"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:hint="@string/pw"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/elixir_gray"
            android:fontFamily="@font/pretendard_regular"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/text_pw"
            app:layout_constraintBottom_toTopOf="@id/rule_enter_pw"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

        <!-- 비밀번호 규칙 -->
        <TextView
            android:id="@+id/rule_enter_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/rule_pw"
            android:fontFamily="@font/pretendard_thin"
            android:textColor="@color/elixir_orange"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/regist_pw"
            app:layout_constraintBottom_toTopOf="@id/check_pw"/>

        <!-- 비밀번호 확인 -->
        <EditText
            android:id="@+id/check_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textbox"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:hint="@string/check_pw"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/elixir_gray"
            android:fontFamily="@font/pretendard_regular"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/rule_enter_pw"
            app:layout_constraintBottom_toTopOf="@id/text_nick"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

        <!-- 닉네임 -->
        <TextView
            android:id="@+id/text_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/nickname"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/check_pw"
            app:layout_constraintBottom_toTopOf="@id/regist_nick"/>

        <EditText
            android:id="@+id/regist_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textbox"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:hint="@string/nickname"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/elixir_gray"
            android:fontFamily="@font/pretendard_regular"
            android:inputType="text"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/text_nick"
            app:layout_constraintBottom_toTopOf="@id/text_profile"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

        <!-- 프로필 사진 -->
        <TextView
            android:id="@+id/text_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/img_profile"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/regist_nick"
            app:layout_constraintBottom_toTopOf="@id/regist_profile"/>

        <ImageView
            android:id="@+id/regist_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:src="@drawable/img_blank"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_profile"
            app:layout_constraintTop_toBottomOf="@id/text_profile"
            app:layout_constraintBottom_toTopOf="@id/text_sex"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 성별 -->
        <TextView
            android:id="@+id/text_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sex"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/regist_profile"
            app:layout_constraintBottom_toTopOf="@id/select_sex"/>

        <!-- 성별 선택 버튼 -->
        <LinearLayout
            android:id="@+id/select_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/text_sex"
            app:layout_constraintBottom_toTopOf="@id/text_birth">
            <Button
                android:id="@+id/btn_female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_sex"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/female"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>

            <Button
                android:id="@+id/btn_male"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_sex"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/male"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>

            <Button
                android:id="@+id/btn_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_sex"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/other"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>

            <Button
                android:id="@+id/btn_selected_not"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_sex"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/selected_not"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <!-- 출생년도 -->
        <TextView
            android:id="@+id/text_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/birth_year"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toBottomOf="@id/select_sex"
            app:layout_constraintBottom_toTopOf="@id/birth_year"/>

        <Spinner
            android:id="@+id/birth_year"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_spinner_year"
            android:popupBackground="@color/white"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@id/text_birth"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/bg_btn_filled"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/next"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@id/birth_year"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>