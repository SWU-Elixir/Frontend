<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:fitsSystemWindows="true"
    tools:context=".signup.SettingProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 이미지 삽입 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgDiet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_profile"
            android:scaleType="centerCrop"
            android:src="@drawable/img_blank"
            app:layout_constraintDimensionRatio="1:1"
            app:shapeAppearanceOverlay="@style/ImgDefault_Rect"
            tools:ignore="ImageContrastCheck"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMealTitle"/>

        <TextView
            android:id="@+id/tvMealTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/time"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/imgDiet"
            app:layout_constraintBottom_toTopOf="@id/clTime"/>

        <!-- 시간 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvMealTitle"
            app:layout_constraintBottom_toTopOf="@id/tvDietTitle">

            <TextView
                android:id="@+id/tvTime12h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 시간 선택 -->
            <android.widget.ImageButton
                android:id="@+id/btnTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_filled_orange"
                android:contentDescription="@string/time"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:padding="10dp"
                android:src="@drawable/ic_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvTime12h"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

            <!-- 현재 시간으로 설정 -->
            <CheckBox
                android:id="@+id/cbSetNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/elixir_orange"
                app:layout_constraintBaseline_toBaselineOf="@id/tvSetNow"
                app:layout_constraintEnd_toStartOf="@id/tvSetNow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvSetNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/set_time_now"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 식단명 -->
        <TextView
            android:id="@+id/tvDietTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/diet_name"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/clTime"
            app:layout_constraintBottom_toTopOf="@id/etDietTitle"/>

        <EditText
            android:id="@+id/etDietTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_rect_outline_orange"
            android:fontFamily="@font/pretendard_medium"
            android:hint="@string/diet_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/elixir_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/btnRecent"
            app:layout_constraintTop_toBottomOf="@id/tvDietTitle"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintTextFieldSize,TextContrastCheck" />

        <android.widget.Button
            android:id="@+id/btnRecent"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_rect_filled_orange"
            android:drawableStart="@drawable/ic_meal_recent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text=" 이전 식단 불러오기"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintBottom_toTopOf="@id/tvDietCategory"
            app:layout_constraintTop_toBottomOf="@id/etDietTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 식사 유형 -->
        <TextView
            android:id="@+id/tvDietCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/diet_category"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/btnRecent"
            app:layout_constraintBottom_toTopOf="@id/rgSelectDiet"/>

        <!-- 식사 유형 선택지 -->
        <RadioGroup
            android:id="@+id/rgSelectDiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvDietCategory"
            app:layout_constraintBottom_toTopOf="@id/tvRepresentIngredient">
            <RadioButton
                android:id="@+id/btnBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_btn_rect"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/breakfast"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btnLunch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_btn_rect"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/lunch"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btnDinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:background="@drawable/selector_btn_rect"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/dinner"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btnSnack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_rect"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/snack"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:fontFamily="@font/pretendard_medium"/>
        </RadioGroup>

        <!-- 대표 식재료 태그 -->
        <TextView
            android:id="@+id/tvRepresentIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/represent_ingredient"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toBottomOf="@id/rgSelectDiet"
            app:layout_constraintBottom_toTopOf="@id/cgTagsIngredient"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvRuleIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/rule_ingredient"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_light"
            app:layout_constraintTop_toBottomOf="@id/rgSelectDiet"
            app:layout_constraintBottom_toTopOf="@id/cgTagsIngredient"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 태그 선택지 -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgTagsIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:chipSpacing="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/tvDietScore"
            app:layout_constraintTop_toBottomOf="@id/tvRepresentIngredient">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFindIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ChipStyle_Short"
                app:chipStrokeColor="@color/elixir_orange"
                app:chipIcon="@drawable/ic_search"
                app:chipIconVisible="true"
                android:text="@string/find_ingredient"
                android:textSize="16sp"
                android:textColor="@color/elixir_orange"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- 점수 -->
        <TextView
            android:id="@+id/tvDietScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/diet_score"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/cgTagsIngredient"
            app:layout_constraintBottom_toTopOf="@id/rgSelectScore"/>

        <!-- 점수 선택지 -->
        <RadioGroup
            android:id="@+id/rgSelectScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvDietScore"
            app:layout_constraintBottom_toTopOf="@id/btnWriteDietLog"
            app:layout_constraintStart_toStartOf="parent">
            <RadioButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_btn_circle"
                android:button="@null"
                android:text="@string/score_1"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_btn_circle"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/score_2"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_btn_circle"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="@string/score_3"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_btn_circle"
                android:button="@null"
                android:text="@string/score_4"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"/>

            <RadioButton
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_circle"
                android:button="@null"
                android:text="@string/score_5"
                android:textSize="16sp"
                android:textColor="@color/selector_btn_text"
                android:textAlignment="center"
                android:fontFamily="@font/pretendard_medium"/>
        </RadioGroup>

        <android.widget.Button
            android:id="@+id/btnWriteDietLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/bg_rect_filled_gray"
            android:enabled="false"
            android:text="@string/btn_write"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/rgSelectScore"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>