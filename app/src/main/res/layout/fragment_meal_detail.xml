<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipeImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:shapeAppearanceOverlay="@style/ImgDefault_Rect"
            android:adjustViewBounds="true"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/bg_rect_filled_white_15"
            android:src="@drawable/img_blank"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 시간 표시 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recipeImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/timeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/timeLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 식사 카테고리 -->
        <TextView
            android:id="@+id/dietCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diet_category"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/timeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 식사 시간 선택 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mealTimeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dietCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/mealTimeMorning"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/breakfast"
                android:background="@drawable/bg_rect_outline_gray_5"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mealTimeLunch"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/lunch"
                android:background="@drawable/bg_rect_outline_gray_5"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/mealTimeMorning"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mealTimeDinner"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/dinner"
                android:background="@drawable/bg_rect_outline_gray_5"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/mealTimeLunch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mealTimeSnack"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/snack"
                android:background="@drawable/bg_rect_outline_gray_5"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/mealTimeDinner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 대표 재료 -->
        <TextView
            android:id="@+id/representIngredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/represent_ingredient"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/mealTimeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe_list_tag"
            app:layout_constraintTop_toBottomOf="@id/representIngredient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 점수 -->
        <TextView
            android:id="@+id/dietScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diet_score"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tagList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 점수 선택 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dietScore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/score1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/score_1"
                android:background="@drawable/bg_oval_outline_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/score2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/score_2"
                android:background="@drawable/bg_oval_outline_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/score1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/score3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/score_3"
                android:background="@drawable/bg_oval_outline_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/score2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/score4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/score_4"
                android:background="@drawable/bg_oval_outline_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/score3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/score5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/score_5"
                android:background="@drawable/bg_oval_outline_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/elixir_gray"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toEndOf="@id/score4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>