<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="150dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <!-- 뒤로가기 아이콘 -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_arrow"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription, SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/mealTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_bold"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/elixir_darkgray"
                    tools:ignore="ContentDescription, SpeakableTextPresentCheck" />
            </LinearLayout>
            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rect_filled_white_15"
                android:src="@drawable/img_blank"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                tools:ignore="ContentDescription,UnusedAttribute"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="식사 유형"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mealTimeMorning"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="아침"
                    android:background="@drawable/bg_rect_outline_gray_5"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/mealTimeLunch"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="점심"
                    android:background="@drawable/bg_rect_outline_gray_5"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/mealTimeDinner"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="저녁"
                    android:background="@drawable/bg_rect_outline_gray_5"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/mealTimeSnack"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="간식"
                    android:background="@drawable/bg_rect_outline_gray_5"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="대표 식재료 태그"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="16sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tagList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_recipe_list_tag" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저속노화에 얼마나 적합한 식단인가요?"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/score1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:background="@drawable/bg_oval_outline_gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/score2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:background="@drawable/bg_oval_outline_gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/score3"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:background="@drawable/bg_oval_outline_gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/score4"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:background="@drawable/bg_oval_outline_gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/score5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:background="@drawable/bg_oval_outline_gray"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/elixir_gray"
                    android:fontFamily="@font/pretendard_medium"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>