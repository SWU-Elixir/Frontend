<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <!-- 뒤로가기 아이콘 -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:paddingEnd="6dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription, SpeakableTextPresentCheck" />
            <!-- 검색 바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_recipe_searchbar"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical">

                <!-- 검색창 -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="검색어를 입력하세요"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:textSize="14sp" />

                <!-- 검색 아이콘 -->
                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_recipe_search"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="40dp"
                    android:maxHeight="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription, SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

        <!-- 인기 검색어 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기 검색어"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularSearchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_dietlog_list_indeterminate"/>

        <!-- 추천 검색어 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 검색어"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationSearchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe_recommendation_list_indeterminate"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
