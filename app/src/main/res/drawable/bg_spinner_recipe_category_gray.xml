<?xml version ="1.0" encoding ="utf-8"?><!--  Learn More about how to use App Actions: https://developer.android.com/guide/actions/index.html -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/elixir_orange"/>
                    <padding
                        android:top="6dp"
                        android:bottom="6dp"
                        android:right="10dp"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_category_down_selected"
                android:gravity="center|end"
                android:width="15dp"
                android:height="15dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/elixir_gray"/>
                    <padding
                        android:top="6dp"
                        android:bottom="6dp"
                        android:right="10dp"/>
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_category_down"
                android:gravity="center|end"
                android:width="15dp"
                android:height="15dp" />
        </layer-list>
    </item>
</selector>
